{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "commands": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "cmd": {
              "type": "string"
            },
            "watch_paths": {
              "type": "array",
              "items": [
                {
                  "type": "string"
                }
              ]
            },
            "ignore_paths": {
              "type": "array",
              "items": [
                {
                  "type": "string"
                }
              ]
            }
          },
          "required": [
            "cmd",
            "watch_paths"
          ]
        }
      ]
    }
  },
  "required": [
    "commands"
  ]
}
